<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurant List</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <!-- navigation -->
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
              width="30"
              height="30"
              class="d-inline-block align-top"
              alt="我的餐廳清單"
            />
            {{#if isAuthenticated}}{{user.name}}的 {{/if}}
            餐廳清單
          </a>
          <div class="text-right">
            <a href="/restaurants/new">
              <button type="button" class="btn btn-info">新增餐廳</button>
            </a>
            {{#if isAuthenticated}}
              <a href="users/logout">
                <button type="button" class="btn btn-info">Logout</button>
              </a>
            {{else}}
              <a href="/users/login">
                <button type="button" class="btn btn-info">Login</button>
              </a>
            {{/if}}
          </div>
        </div>
      </nav>
      <div class="banner"></div>
    </header>
    <!-- partial templates will replace the part of 'body' here -->
    {{{body}}}
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    ></script>
  </body>
</html>