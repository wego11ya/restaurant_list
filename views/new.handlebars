<h1 class="restaurant-show-title">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="form-group">
      <label for="name">店名<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="ABC日式燒肉"
        required
      />
    </div>
    <div class="form-group">
      <label for="name_en">英文店名<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        name="name_en"
        placeholder="ABC BBQ house"
        required
      />
    </div>
    <div class="form-group">
      <label for="category">分類<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        name="category"
        placeholder="日本料理"
        list="categoryOptions"
        required
      />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="form-group">
      <label for="image">圖片連結<span class="text-danger">*</span></label>
      <input type="url" class="form-control" name="image" required />
    </div>
    <div class="form-group">
      <label for="location">地址<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        name="location"
        placeholder="台北市松山區台灣大道1010號"
        required
      />
    </div>
    <div class="form-group">
      <label for="phone">電話<span class="text-danger">*</span></label>
      <input
        type="tel"
        class="form-control"
        name="phone"
        placeholder="02-10101010"
        required
      />
    </div>
    <div class="form-group">
      <label for="google_map">Google地圖連結<span
          class="text-danger"
        >*</span></label>
      <input type="url" class="form-control" name="google_map" required />
    </div>
    <div class="form-group">
      <label for="rating">評分<span class="text-danger">*</span></label>
      <input
        type="number"
        class="form-control"
        name="rating"
        min="0"
        max="5"
        step="0.1"
        required
      />
    </div>
    <div class="form-group">
      <label for="description">敘述<span class="text-danger">*</span></label>
      <textarea
        class="form-control"
        name="description"
        id="description"
        rows="5"
        required
      ></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-info">新增餐廳</button>
      <a href="/">
        <button type="button" class="btn btn-light">返回首頁</button>
      </a>
      <button type="reset" class="btn btn-danger">重新輸入</button>
    </div>
  </form>
</div>